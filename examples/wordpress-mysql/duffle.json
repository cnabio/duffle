{
    "name": "wordpress-mysql",
    "version": "0.2.0",
    "schemaVersion": "v1.0.0",
    "invocationImages": {
        "cnab": {
            "name": "cnab",
            "builder": "docker",
            "configuration": {
                "registry": "deislabs"
            }
        }
    },
    "images": {
        "wordpress": {
            "image": "bitnami/wordpress:5.2.4-debian-9-r15",
            "digest": "sha256:6aaa99c7d856d0afd165c2962d1a9575580c443f1edc5448dd96a27643f0e1d9"
        }
    },
    "parameters": {
      "resource_group": {
        "defaultValue": "duffle-group",
        "type": "string",
        "destination": {
          "env": "RESOURCE_GROUP"
        }
      },
      "cluster_name": {
        "defaultValue": "my-aks-cluster",
        "type": "string",
        "destination": {
          "env": "CLUSTER_NAME"
        }
      },
      "mysql_resource_group": {
        "defaultValue": "aks-wordpress-mysql",
        "type": "string",
        "destination": {
          "env": "MYSQL_RESOURCE_GROUP"
        }
      },
      "mysql_db_service_name": {
        "defaultValue": "mymysqldb",
        "type": "string",
        "destination": {
          "env": "MYSQL_DB_SERVICE_NAME"
        }
      },
      "mysql_location": {
        "defaultValue": "westus",
        "type": "string",
        "destination": {
          "env": "MYSQL_LOCATION"
        }
      }
    },
    "credentials": {
      "azure_tokens": {
        "path": "/root/.azure/accessTokens.json"
      },
      "azure_profile": {
        "path": "/root/.azure/azureProfile.json"
      },
      "mysql_user": {
        "env": "MYSQL_USER"
      },
      "mysql_password": {
        "env": "MYSQL_PASSWORD"
      }
    },
    "actions": {
        "status": {
            "modifies": false
        }
    }
}

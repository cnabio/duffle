{
    "name": "ansible-azurevm",
    "version": "0.1.0",
    "schemaVersion": "v1.0.0",
    "invocationImages": {
        "cnab": {
            "name": "cnab",
            "builder": "docker",
            "configuration": {
                "registry": "cnab"
            }
        }
    },
    "parameters": {
        "check": {
            "defaultValue": false,
            "type": "boolean",
            "destination": {
                "env": "CHECK"
            }
        }
    },
    "credentials": {
        "tenant_id": {
            "env": "AZURE_TENANT"
        },
        "client_id": {
            "env": "AZURE_CLIENT_ID"
        },
        "client_secret": {
            "env": "AZURE_SECRET"
        },
        "subscription_id": {
            "env": "AZURE_SUBSCRIPTION_ID"
        }
    }
}
